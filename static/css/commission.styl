#commisPage
  width: 100%
  height: 90vh

  background: url('https://frame.kitzu.me/cdn/38656')
  background-position: center
  background-size: cover
  background-repeat: no-repeat
  .overlay
    width: 100%
    height: 100%
    h1
      margin: 0
      padding: 3rem 0
      color: text
      text-align: center
    .card
      width: 80%
      height: 68vh
      background: w-bg
      color: w-text
      overflow: auto

      margin-left: auto
      margin-right: auto
      padding: 2rem 1rem
      padding-bottom: 0
      
      border-top-left-radius: 1rem
      .caution-badge
        padding: .2rem
        background: #ffc107
        border-radius: 5px
      .container
        display: flex
        flex-direction: column
        gap: 1rem
        margin-bottom: 2rem
        .miniCard
          width: 90%
          height: auto
          
          margin-left: auto
          margin-right: auto
          border-radius: 1rem

          display: flex
          flex-direction: column
          border: 1px solid #2e2f2f

          justify-content: center
          align-items: center
          .img
            width: 100%
            img
              width: 100%
              border-top-left-radius: 1rem
              border-top-right-radius: 1rem
          .content
            width: auto
            padding: .5rem
            text-align: left
